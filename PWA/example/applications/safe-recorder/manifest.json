{
     "name": "copious.world recorder",
     "short_name": "Safe-Recorder",
     "description": "A human page recorder application",
     "start_url": "./",
     "scope": "./",

     "theme_color": "#fff1e0",
     "background_color": "#9F0C3F",

     "display": "standalone",
     "display_override": [ "window-controls-overlay" ],
     "edge_side_panel": {
          "preferred_width": 496
     },

     "icons": [
          {
               "src": "icons/lowres.webp",
               "sizes": "48x48",
               "type": "image/webp"
          },
          {
               "src": "icons/lowres",
               "sizes": "48x48",
               "type": "image/svg"
          },
          {
               "src": "icons/hd_med.svg",
               "sizes": "72x72 96x96 128x128 256x256",
               "type": "image/svg"
          },
          {
               "src": "icons/hd_hi.svg",
               "sizes": "257x257",
               "type": "image/svg"
          }
     ],
     "screenshots": [
          {
               "src": "./images/screenshot-playlist.png",
               "sizes": "1280x720",
               "platform": "wide",
               "label": "One view of app."
          },
          {
               "src": "./images/screenshot-visualizer.png",
               "sizes": "1280x720",
               "platform": "wide",
               "label": "Another view of app."
          },
          {
               "src": "./images/screenshot-widget.png",
               "sizes": "600x400",
               "label": "The something widget"
          }
     ]
}
   